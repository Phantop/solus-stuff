#!/usr/bin/fish

function buildme
    echo Now building (basename $argv)
    cd $argv
    sudo solbuild build package.yml -d
    sudo eopkg it --reinstall (basename $argv)*.eopkg
    cd ..
end

cd (dirname (realpath (status -f)))

sudo solbuild init

if test "$argv"
    for i in $argv
        buildme $i
    end
else
    sudo ./build (cat list)
end
